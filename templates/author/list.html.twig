<h1>Liste des auteurs</h1>

<p>Nombre d'auteurs : {{ authorsCount }}</p>
<p>Nombre total de livres : {{ totalBooks }}</p>

{% if authors is defined and authors|length > 0 %}
    <ul>
    {% for author in authors %}
        <li>
            <img src="{{ author.picture }}" alt="{{ author.username }}" width="100">
            <strong>{{ author.username|upper }}</strong> - Email : {{ author.email }} - Livres : {{ author.nb_books }}
            <a href="{{ path('author_details', {'id': author.id}) }}">Details</a>
        </li>
    {% endfor %}
    </ul>
{% else %}
    <p>Aucun auteur disponible.</p>
{% endif %}
