{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
<h1>Liste des livres</h1>

<table border="1" cellspacing="0" cellpadding="5">
    <thead>
        <tr>
            <th>Title</th>
            <th>Publication date</th>
            <th>Published</th>
            <th>Category</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
                <td>{{ book.enabled ? 'Yes' : 'No' }}</td>
                <td>{{ book.category ? book.category : '' }}</td>
                <td>{{ book.author ? book.author.username : 'N/A' }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">Show</a> |
                    <a href="{{ path('book_edit', {'id': book.id}) }}">Edit</a> |
                    <a href="{{ path('book_delete', {'id': book.id}) }}" 
                       onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No books found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
