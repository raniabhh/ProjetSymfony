<h1>Liste des auteurs</h1>

<table style="border-collapse: collapse; width: 100%; border: 2px solid black;">
    <thead>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">Nom</th>
            <th style="border: 1px solid black; padding: 8px;">Email</th>
            <th style="border: 1px solid black; padding: 8px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for author in authors %}
            <tr>
                <td style="border: 1px solid black; padding: 8px;">{{ author.username }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ author.email }}</td>
                <td style="border: 1px solid black; padding: 8px;">
                    <a href="{{ path('edit_author', {'id': author.id}) }}" 
                       style="display: inline-block; padding: 4px 8px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px; margin-right: 5px;">
                        Edit
                    </a>
                    <a href="{{ path('app_delete', {'id': author.id}) }}" 
                       onclick="return confirm('Supprimer cet auteur ?')" 
                       style="display: inline-block; padding: 4px 8px; background-color: #dc3545; color: white; text-decoration: none; border-radius: 4px;">
                        Delete
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td style="border: 1px solid black; padding: 8px;" colspan="3">Aucun auteur trouv√©</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div style="margin-top: 20px;">
    <a href="{{ path('add_author_form') }}" 
       style="display: inline-block; padding: 8px 16px; background-color: #28a745; color: white; text-decoration: none; border-radius: 4px;">
        Ajouter un auteur
    </a>
</div>
