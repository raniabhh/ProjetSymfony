{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
<body style="background-color: white; margin: 0; padding: 0; min-height: 100vh;">

    <div style="max-width: 600px; margin: 40px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #fff;">
        <h1>Edit Book</h1>

        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.publicationDate) }}
            {{ form_row(form.category) }}
            {{ form_row(form.author) }}
            <button type="submit" style="margin-top: 10px; padding: 8px 16px; background-color: #4CAF50; 
 color: white; border: none; border-radius: 4px;">
                Save
            </button>
        {{ form_end(form) }}

        <a href="{{ path('book_list') }}" 
           style="display: inline-block; margin-top: 15px; padding: 8px 16px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 4px;">
            Back to list
        </a>
    </div>

</body>
{% endblock %}
