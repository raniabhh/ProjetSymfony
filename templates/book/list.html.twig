{% block body %}
<h1>Liste des livres</h1>

<table style="border-collapse: collapse; width: 100%; border: 2px solid black;">
    <thead>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">Title</th>
            <th style="border: 1px solid black; padding: 8px;">Publication date</th>
            <th style="border: 1px solid black; padding: 8px;">Published</th>
            <th style="border: 1px solid black; padding: 8px;">Category</th>
            <th style="border: 1px solid black; padding: 8px;">Author</th>
            <th style="border: 1px solid black; padding: 8px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
            <tr>
                <td style="border: 1px solid black; padding: 8px;">{{ book.title }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ book.enabled ? 'Yes' : 'No' }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ book.category ?: '' }}</td>
                <td style="border: 1px solid black; padding: 8px;">{{ book.author ? book.author.username : 'N/A' }}</td>
                <td style="border: 1px solid black; padding: 8px;">
                    <a href="{{ path('book_show', {'id': book.id}) }}">Show</a> |
                    <a href="{{ path('book_edit', {'id': book.id}) }}">Edit</a> |
                    <a href="{{ path('book_delete', {'id': book.id}) }}" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td style="border: 1px solid black; padding: 8px;" colspan="6">No books found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div style="margin-top: 20px;">
    <a href="{{ path('book_add') }}" 
       style="display: inline-block; padding: 10px 20px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 4px;">
        Add a book
    </a>
</div>

{% endblock %}
